{
  "buildCommand": "prisma generate && next build",
  "framework": "nextjs",
  "installCommand": "npm install",
  "crons": [
    {
      "path": "/api/send-report?period=daily",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/refresh-views",
      "schedule": "0 6 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/webhooks/:path*",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    }
  ]
}

