# ========================================
# DATABASE
# ========================================
# Neon Postgres connection string
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL=

# Application timezone (for report scheduling)
TIMEZONE=America/Chicago

# ========================================
# SHOPIFY
# ========================================
# Your Shopify store domain (e.g., jmattingly1845.myshopify.com)
SHOPIFY_STORE_DOMAIN=

# Admin API access token (from Shopify Admin → Apps → Develop apps)
SHOPIFY_ADMIN_ACCESS_TOKEN=

# Webhook signature secret (from Shopify webhook configuration)
SHOPIFY_WEBHOOK_SECRET=

# ========================================
# SQUARE
# ========================================
# Square access token (Production or Sandbox)
SQUARE_ACCESS_TOKEN=

# Environment: "production" or "sandbox"
SQUARE_ENV=production

# Main location ID (optional - will auto-detect if not provided)
SQUARE_LOCATION_ID=

# Webhook signature key (from Square Developer Dashboard → Webhooks)
SQUARE_WEBHOOK_SECRET=

# Webhook URL (must match exactly what is configured in Square)
SQUARE_WEBHOOK_URL=https://your-domain.vercel.app/api/webhooks/square

# ========================================
# ANYROAD
# ========================================
# AnyRoad API key
ANYROAD_API_KEY=

# AnyRoad webhook signature secret
ANYROAD_WEBHOOK_SECRET=

# ========================================
# EMAIL (RESEND)
# ========================================
# Resend API key (from https://resend.com/api-keys)
RESEND_API_KEY=

# Comma-separated list of email recipients for reports
REPORT_RECIPIENTS=owner@jmattingly1845.com,ops@jmattingly1845.com

# ========================================
# SECURITY
# ========================================
# Secret for webhook endpoint protection
# Generate with: openssl rand -base64 32
WEBHOOK_SECRET=

# Secret for cron job authentication
CRON_SECRET=

# ========================================
# OPTIONAL - DEVELOPMENT
# ========================================
# Next.js environment
NODE_ENV=development

# Public app URL (for webhooks and emails)
NEXT_PUBLIC_APP_URL=http://localhost:3000
